<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.geometry.Insets?>
    <?import javafx.scene.control.Button?>
    <?import javafx.scene.control.TextArea?>
    <?import javafx.scene.image.ImageView?>
    <?import javafx.scene.layout.VBox?>

    <VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.catolicapb.facerecoptm.controller.MainController">
        <children>
            <ImageView fx:id="imageView" fitHeight="300" fitWidth="400" />
            <Button fx:id="trainButton" text="Train Model" />
            <Button fx:id="recognizeButton" text="Recognize Face" />
            <TextArea fx:id="logArea" editable="false" prefHeight="100" prefWidth="400" />
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
